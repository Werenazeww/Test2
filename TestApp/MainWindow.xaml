<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тест" Height="450" Width="600">
    <Grid>
        <TabControl>
            
            <TabItem Header="Создать тест">
                <StackPanel Margin="10">
                    <TextBlock Text="Вопрос:"/>
                    <TextBox x:Name="QuestionTextBox" Margin="0,5"/>

                    <TextBlock Text="Варианты ответов:" Margin="0,10,0,0"/>
                    <TextBox x:Name="Option1TextBox" Margin="0,5" Text="Вариант 1"/>
                    <TextBox x:Name="Option2TextBox" Margin="0,5" Text="Вариант 2"/>
                    <TextBox x:Name="Option3TextBox" Margin="0,5" Text="Вариант 3"/>
                    <TextBox x:Name="Option4TextBox" Margin="0,5" Text="Вариант 4"/>

                    <TextBlock Text="Номер правильного ответа (1-4):" Margin="0,10,0,0"/>
                    <TextBox x:Name="CorrectAnswerTextBox" Margin="0,5" Text="1"/>

                    <Button Content="Добавить вопрос" Click="AddQuestion_Click" Margin="0,10"/>
                    <TextBlock x:Name="StatusText" Margin="0,5"/>
                </StackPanel>
            </TabItem>

            
            <TabItem Header="Пройти тест">
                <StackPanel Margin="10">
                    <TextBlock x:Name="CurrentQuestionText" FontSize="16" Text="Вопрос не загружен"/>
                    <RadioButton x:Name="Answer1Radio" Content="-" GroupName="Answers" Margin="0,5"/>
                    <RadioButton x:Name="Answer2Radio" Content="-" GroupName="Answers" Margin="0,5"/>
                    <RadioButton x:Name="Answer3Radio" Content="-" GroupName="Answers" Margin="0,5"/>
                    <RadioButton x:Name="Answer4Radio" Content="-" GroupName="Answers" Margin="0,5"/>

                    <Button Content="Ответить" Click="SubmitAnswer_Click" Margin="0,10"/>
                    <TextBlock x:Name="ResultText" FontSize="14"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>